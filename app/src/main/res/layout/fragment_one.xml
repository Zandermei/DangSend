<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/bannder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.youth.banner.Banner>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <GridView
                android:id="@+id/one_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="2"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#e4e4e4"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/one_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="每日优惠"
                    android:textColor="#333333"
                    android:textStyle="bold"></TextView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/one_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/one_day"></androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>