<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/recyc_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recyc_img"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


        <TextView
            android:layout_below="@+id/recyc_img"
            android:textColor="#666666"
            android:id="@+id/recyc_goods_name"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_below="@+id/recyc_goods_name"
            android:textStyle="bold"
            android:textColor="#ee3344"
            android:gravity="center_vertical"
            android:id="@+id/recyc_goods_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>

</LinearLayout>