<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:background="@drawable/itembg"
        android:id="@+id/order_line_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/order_line_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:id="@+id/order_center_img"
                android:src="@drawable/ps_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/order_center_img"
                android:id="@+id/order_center_time"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>


        <TextView
            android:textColor="#333333"
            android:layout_below="@+id/order_line_center"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/order_phone_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#666666"
            android:layout_below="@+id/order_phone_name"
            android:gravity="center_vertical"
            android:id="@+id/order_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>



        <RelativeLayout
            android:id="@+id/order_line_money"
            android:layout_below="@+id/order_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:id="@+id/order_goods_name"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textColor="#ee3344"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/order_goods_money"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/order_line_money"
            android:id="@+id/order_line_btom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_style"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="取消订单"
                android:id="@+id/order_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
            </Button>
        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>